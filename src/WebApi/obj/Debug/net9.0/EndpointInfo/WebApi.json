{
  "openapi": "3.0.4",
  "info": {
    "title": "Sourcing & Tendering API",
    "version": "v1"
  },
  "paths": {
    "/api/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/Rfx": {
      "get": {
        "tags": [
          "Rfx"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Rfx"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RfxUpsertDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RfxUpsertDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RfxUpsertDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Rfx/{id}": {
      "get": {
        "tags": [
          "Rfx"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Rfx"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RfxUpsertDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RfxUpsertDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RfxUpsertDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Rfx"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "usernameOrEmail": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "nullable": true
          },
          "expiresAtUtc": {
            "type": "string",
            "format": "date-time"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Priority": {
        "enum": [
          "Low",
          "Medium",
          "High",
          "Urgent"
        ],
        "type": "string"
      },
      "RfxAttachmentDto": {
        "type": "object",
        "properties": {
          "fileName": {
            "type": "string",
            "nullable": true
          },
          "storagePath": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RfxCriterionDto": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "weightPercent": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "RfxMemberDto": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "nullable": true
          },
          "role": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RfxType": {
        "enum": [
          "Rfi",
          "Rfp",
          "Rfq",
          "Eoi"
        ],
        "type": "string"
      },
      "RfxUpsertDto": {
        "type": "object",
        "properties": {
          "type": {
            "$ref": "#/components/schemas/RfxType"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "category": {
            "type": "string",
            "nullable": true
          },
          "department": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "estimatedBudget": {
            "type": "number",
            "format": "double"
          },
          "hideBudgetFromSuppliers": {
            "type": "boolean"
          },
          "publicationDate": {
            "type": "string",
            "format": "date-time"
          },
          "closingDate": {
            "type": "string",
            "format": "date-time"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "priority": {
            "$ref": "#/components/schemas/Priority"
          },
          "tenderBondRequired": {
            "type": "boolean"
          },
          "contactPerson": {
            "type": "string",
            "nullable": true
          },
          "contactEmail": {
            "type": "string",
            "nullable": true
          },
          "contactPhone": {
            "type": "string",
            "nullable": true
          },
          "clarificationDeadline": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "scopeOfWork": {
            "type": "string",
            "nullable": true
          },
          "technicalSpecifications": {
            "type": "string",
            "nullable": true
          },
          "deliverables": {
            "type": "string",
            "nullable": true
          },
          "timeline": {
            "type": "string",
            "nullable": true
          },
          "minimumQualifyingScore": {
            "type": "integer",
            "format": "int32"
          },
          "evaluationNotes": {
            "type": "string",
            "nullable": true
          },
          "evaluationCriteria": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RfxCriterionDto"
            },
            "nullable": true
          },
          "committeeMembers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RfxMemberDto"
            },
            "nullable": true
          },
          "attachments": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RfxAttachmentDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme. Example: 'Bearer {token}'",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}